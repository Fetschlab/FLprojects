import numpy as np
import matplotlib.pyplot as plt

class NeuronUnit:
    def __init__(self, spiketimes, amps=None, waveforms=None, template=None, temp_amp=np.nan,
            sessionID='', type='', area='', channel=0, depth=np.nan, electrode=''):
        
        self.spiketimes = np.array(spiketimes)
        self.amps = amps
        self.template = template
        self.temp_amp = temp_amp
        self.sessionID = sessionID
        self.type = type
        self.area = area
        self.channel = self.channel
        self.depth = depth
        self.electrode = electrode

    def __str__(self):
        return f'{type} {self.area} unit, {len(self.spiketimes)} spikes, session {sessionID}, \
            ch{self.channel} at {self.depth} depth, using {self.electrode}'

    def compute_isi(self, binsize=0.01, max=0.2):
        pass

    def compute_corr(self, binsize=0.01, max=0.1):
        pass

    def plot_waveforms(self, sr=30000):
        pass

    def compute_psth(self, alignEvent, binsize=0.01, trange=[-1,1]):
        pass

    def raster_psth(self, alignEvent, binsize=0.01, trange=[-1,1]):
        pass


